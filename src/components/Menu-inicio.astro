---
import Logo from "../pages/img/Montenegro_Logo.png";
import LogoBlanco from "../pages/img/Montenegro_Logo-Blanco.png";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
            integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
    </head>

    <body>
        <body>
            <div class="logo-2">
                <a href="/Index">
                    <img src={Logo.src} alt="logo" />
                </a>
            </div>
            <header>
                <div class="navbar">
                    <div class="logo"></div>
                    <ul class="enlaces">
                        <li><a href="/Nosotros">Nosotros</a></li>
                        <li><a href="/Tenebra">Tenebra</a></li>
                        <li><a href="/Contacto">Contacto</a></li>
                    </ul>
                    <div class="toggle-btn">
                        <i class="fa-solid fa-bars"></i>
                    </div>
                </div>

                <div class="dropdown-menu">
                    <li><a href="/Nosotros">Nosotros</a></li>
                    <li><a href="/Tenebra">Tenebra</a></li>
                    <li><a href="/Contacto">Contacto</a></li>
                </div>
            </header>
        </body>
    </body>

    <style>
        /*h1 {
		font-size: 5rem;
		font-weight: 800;
		line-height: 1;
		text-align: center;
		/*margin-bottom: 1em;
		font-family: Arial, Helvetica, sans-serif;
		color: aliceblue;
	}
	*/

        body {
            padding: 0px;
            margin: 0px;
            font-family: raleway;
        }
        body.dark .logo-2 {
            filter: invert(100%);
        }
        .logo-2 {
            text-align: center;
            width: 100%;
            height: 10%;
        }
        .logo-2 img {
            width: 410px;
            height: 205px;
            transform: scale(1.5);
            /*
		position: absolute;
		top: -971px;
		left: -1395px;
		*/
        }

        ul {
            gap: 65px;
            background: none;
            text-align: right;
            margin-right: 30%;
        }
        li {
            list-style: none;
            font-weight: 800;
            font-size: 2em;
            background: none;
        }

        a {
            text-decoration: none;
            color: aliceblue;
            /*background: black;*/
            background: none;
        }

        a:hover {
            color: rgb(171, 5, 5);
        }
        .navbar {
            display: block;
            padding-right: 2em;
            margin-top: 20px;
            align-items: center;
            line-height: 100px;
            justify-content: space-between;
            background-color: rgb(0, 0, 0);
            backdrop-filter: blur(15px);
        }
        body.dark .navbar {
            background-color: rgb(255, 255, 255);
        }
        body.dark a {
            color: black;
        }

        .navbar .toggle-btn {
            color: rgb(135, 3, 3);
            font-size: 1.7em;
            padding: 0em;
            display: none;
        }

        .dropdown-menu {
            display: none;
            /*background: rgba(74, 188, 190, 0.1);*/
            background-color: rgb(0, 0, 0);
            position: absolute;
            right: 4rem;
            top: 240px;
            height: 0px;
            width: 300px;
            line-height: 3em;
            border-radius: 10px;
            z-index: 999;
            /*padding: 3.5em;*/

            overflow: hidden;
            transition: height 0.2s cubic-bezier(0.175, 0.882, 0.32, 1.275);
        }

        .dropdown-menu li {
            padding: 0.5em;
            text-align: center;
        }
        .dropdown-menu a {
            color: azure;
        }

        .dropdown-menu.open {
            height: 245px;
        }
        @media (max-width: 860px) {
            li {
                list-style: none;
                font-weight: 800;
                font-size: 1.8em;
            }
            ul {
                gap: 35px;
            }
        }
        @media (max-width: 660px) {
            h1 {
                font-size: 2.5em;
            }
            a {
                color: black;
            }
            .navbar .enlaces {
                display: none;
            }

            .navbar .toggle-btn {
                display: block;
                cursor: pointer;
            }

            .dropdown-menu {
                display: block;
            }
            .navbar {
                position: absolute;
                top: 80px;
                left: 82%;
                /*background: red;*/
                line-height: 0px;
                background: none;
            }
            .logo-2 img {
                width: 410px;
                height: 205px;
                transform: scale(1);
            }
            body.dark .navbar {
                background: rgb(0, 0, 0);
            }
        }
        @media (max-width: 645px) {
            .logo-2 img {
                position: relative;
                left: -5%;
            }
        }
        @media (max-width: 475px) {
            .logo-2 img {
                position: relative;
                left: -12%;
                width: 410px;
                height: 205px;
                transform: scale(0.7);
            }
            li {
                list-style: none;
                font-weight: 600;
                font-size: 1.5em;
            }
            .dropdown-menu {
                position: absolute;
                right: 1.5rem;
                top: 170px;
            }
        }
    </style>

    <script>
        const toggleBtn = document.querySelector(".toggle-btn");
        const toggleBtnIcon = document.querySelector(".toggle-btn i");
        const dropDown = document.querySelector(".dropdown-menu");

        toggleBtn.onclick = function () {
            dropDown.classList.toggle("open");

            const isOpen = dropDown.classList.contains("open");

            toggleBtnIcon.classList = isOpen
                ? "fa-solid fa-xmark"
                : "fa-solid fa-bars";
        };
    </script>
</html>
